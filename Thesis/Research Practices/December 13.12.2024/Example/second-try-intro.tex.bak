	        \begin{align}
	        	\begin{cases}
				\left . \hspace{0.14cm}\phi\hspace{0.9mm} \right|_{z=0, 1} &= 0 \\
					\left . E^{\phi} \right|_{z=0, 1} &= 0 
	        	\end{cases}
	        \end{align}
	    }
    \end{themedTitleBlock}
\end{frame}

